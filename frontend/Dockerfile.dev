FROM node:18-alpine

WORKDIR /usr/src/app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Create non-root user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S nodeuser -u 1001

# Create required directories
RUN mkdir -p logs tmp && chown -R nodeuser:nodejs logs tmp

# Change to non-root user
USER nodeuser

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"]
